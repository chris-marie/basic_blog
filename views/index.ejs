<!DOCTYPE html>
<html ng-app="basicblog">
<head lang="en">
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/stylesheets/base.css"/>
  <script src="/angular/angular.js"></script>
  <script src="/angular-resource/angular-resource.js"></script>
  <script src="/angular-route/angular-route.js"></script>
  <script src="/javascripts/controllers.js"></script>
  <script src="/javascripts/services.js"></script>
</head>
<body>
<div ng-view></div>
<script>
  angular.module('basicblog', ['basicblog.controllers', 'ngRoute']).config(function ($routeProvider) {
    $routeProvider.when('/posts/create', {
      templateUrl: '/partials/createpost.html',
      controller: 'CreatePostController as cp'
    }).when('posts/allposts', {
      templateUrl: '/partials/allblogs.html',
      controller: 'BlogListController as bl'
    }).when('posts/lists/:id', {
      templateUrl: '/partials/listpost.html',
      controller: 'ListPostController as lp'
    }).otherwise({
      redirectTo: 'posts/create'
    });
  });
</script>

</body>
</html>
